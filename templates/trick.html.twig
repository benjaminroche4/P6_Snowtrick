{% extends'base.html.twig' %}

{% block title %}{{ trick.title }}{% endblock %}

{% block body %}

    <!-- Begin Jumbotron -->
    <div class="jumbotron jumbotron-main" id="figure-name" style="background-image:url({{trick.MainPhotoUrl}});background-size:cover;">
        <div class="container center-vertically-holder">
            <div class="center-vertically">
                <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 text-center">
                    <h1 class="scaleReveal">
                        {{ trick.title }}
                    </h1>
                </div><!-- /.column -->
            </div><!-- /.vertical center -->
        </div><!-- /.container -->
    </div>
    <!-- End Jumbotron -->

    <!-- Begin Infos -->
    <section id="infos" class="background1 section-padding">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <p class="text-justify">{{ trick.content }}</p>
                    <span class="text-center section-divider"></span>
                    <p class="no-margin">
                        <span class="label label-default">Publié le {{ trick.CreatedAt | date('d/m/Y') }}</span>
                        <span class="label label-primary">{{ trick.Groupe.name }}</span>
                    </p>
                </div><!-- /.column -->
            </div><!-- /.row -->
        </div>
    </section>
    <!-- End Infos-->

    <!-- Begin Comment Form -->
    <section id="contact" class="background2 section-padding">
        <div class="container">
            <div class="row mb30">
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 section-title text-center">
                    <h4>Poster un commentaire</h4>
                    <span class="section-divider mb15"></span>
                </div><!-- /.column -->
            </div><!-- /.row -->
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                    <form id="commentForm" name="commentForm">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="controls">
                                        <textarea class="form-control" id="message" placeholder="Écrivez votre commentairei ici.." required="" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt15">
                            <div class="col-sm-6">
                                <div id="msgSubmit" class="h4 hidden mt10 no-margin-bottom"></div>
                            </div><!-- /.column -->
                            <div class="col-sm-6 text-right">
                                <button type="submit" id="submit" class="btn btn-default btn-lg">Poster</button>
                            </div><!-- /.column -->
                        </div><!-- /.row -->
                    </form><!-- /.form -->
                </div><!-- /.column -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- /.section -->
    <!-- End Comment Form -->

    <!-- Begin Comments -->
    <section id="comments" class="background1 section-padding">
        <div class="container">
            <div class="row mb30">
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 section-title text-center">
                    <h4>Commentaires</h4>
                    <span class="section-divider mb15"></span>
                </div><!-- /.column -->
            </div><!-- /.row -->
            <div class="row">
                {% for comment in comments %}
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                    <span><img src='{{ comment.memberCreator.urlAvatar}}' alt="avatar" class="avatar-style"></span><h5 class="heading-1 mb20">{{ comment.memberCreator }}</h5>
                    <p class="text-justify">{{ comment.Comment }}</p>
                    <p class="comment-date mt15 mb20">Publié le {{ trick.CreatedAt | date('d/m/Y') }} à {{ trick.CreatedAt | date('H:i') }}</p>
                </div><!-- /.column -->
                {% else %}
                    <p class="text-center">Soyez le premier à écrire un commentaire pour ce trick !</p>
                {% endfor %}
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- /.section -->
    <!-- End Comments -->

{% endblock %}
