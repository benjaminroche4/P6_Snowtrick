{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <!-- Begin Register -->
    <div class="jumbotron jumbotron-main" style="background-image:url({{ asset('img/register-background.jpg') }});background-size:cover;">
        <div class="container center-vertically-holder">
            <div class="center-vertically">
                <div class="col-sm-6 col-lg-6 col-sm-offset-3 col-lg-offset-3 mt40-xs">
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm, {"attr": {"id": "register_form", "class": "register-form mb40-xs"}}) }}
                    <h3 class="no-margin-top mb20">Rejoignez la communaut√©</h3>
                    <span class="text-danger text-small">{{ form_errors(registrationForm.username) }}</span>
                    <span class="text-danger text-small">{{ form_errors(registrationForm.email) }}</span>
                    <span class="text-danger text-small">{{ form_errors(registrationForm.plainPassword)}}</span>
                    <div class="form-group">
                        {{ form_widget(registrationForm.username, {"attr": {'class': 'form-control', 'placeholder': 'Pseudo'} })}}
                    </div>
                    <div class="form-group">
                        {{ form_widget(registrationForm.email, {"attr": {'class': 'form-control', 'placeholder': 'Email'} })}}
                    </div>
                    <div class="form-group">
                        {{ form_widget(registrationForm.plainPassword, {"attr": {'class': 'form-control', 'placeholder': 'Mot de passe'} })}}
                    </div>
                    <button type="submit"class="btn btn-primary">S'inscrire</button>
                    {{ form_end(registrationForm) }}

                </div><!-- /.column -->
            </div><!-- /.vertical center -->
        </div><!-- /.container -->
    </div>
    <!-- End Register -->

{% endblock %}
